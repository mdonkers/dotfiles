#!/bin/bash

# Make vim the default editor
export EDITOR=/usr/bin/nvim;
export TERMINAL="urxvt";

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=50000000;
export HISTFILESIZE=$HISTSIZE;
export HISTCONTROL=ignoredups;
# Make some commands not show up in history
export HISTIGNORE=" *:ls:cd:cd -:pwd:exit:date:* --help:* -h:pony:pony add *:pony update *:pony save *:pony ls:pony ls *";

# Prefer US English and use UTF-8
export LANG="en_US.UTF-8";
export LC_ALL="en_US.UTF-8";

# Highlight section titles in manual pages
export LESS_TERMCAP_md="${yellow}";

# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X";

export DBUS_SESSION_BUS_ADDRESS=unix:path=/var/run/user/$(id -u)/bus;

export TODOTXT_DEFAULT_ACTION=ls

# hidpi for gtk apps
export GDK_SCALE=2
export GDK_DPI_SCALE=0.5
export QT_DEVICE_PIXEL_RATIO=2

export DOCKER_CONTENT_TRUST=1


# Prevent terminal losing focus when running Maven commands
export JAVA_TOOL_OPTIONS="-Djava.awt.headless=true"
export MAVEN_OPTS="-Xms1024m -Xmx2048m"

# pip (Python installer) should only run if there is a virtualenv currently activated
export PIP_REQUIRE_VIRTUALENV=true
# use syspip (= pip) to update global packages without a virtualenv environment
syspip() {
   PIP_REQUIRE_VIRTUALENV="" pip3 "$@"
 }
