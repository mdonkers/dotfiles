#!/bin/sh
#
## ~/.xsessionrc
#
## Executed by startx (run your window manager from here)

if [ -d /etc/X11/xinit/xinitrc.d ]; then
	for f in /etc/X11/xinit/xinitrc.d/*; do
		[ -x "$f" ] && . "$f"
	done
	unset f
fi

# run Xprofile
[ -f ~/.Xprofile ] && . ~/.Xprofile

# run Xmodmap
[ -f ~/.Xmodmap ] && xmodmap ~/.Xmodmap

# run local xhost
xhost local:root

# start ssh-agent
#eval $(ssh-agent)

# start gpg-agent
# comment line /etc/X11/Xsession.options - use-ssh-agent
eval $(gpg-agent --daemon --enable-ssh-support --write-env-file ~/.gnupg/gpg-agent.env)

# uncomment this if not using a login manager
# so i3 will start correctly
# exec i3 -V >> ~/.i3/logfile 2>&1
